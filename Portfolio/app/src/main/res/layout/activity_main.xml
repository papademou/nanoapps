<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/portfolio_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_marginTop="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layout_btn_wrapper">

        <Button
            style="@style/AppOrangeButton"
            android:tag="Spotify"
            android:text="SPOTIFY STREAMER"
            android:id="@+id/btn_app_spotify" />

        <Button
            style="@style/AppOrangeButton"
            android:tag="Scores"
            android:text="SCORES APP"
            android:id="@+id/btn_app_scores" />

        <Button
            style="@style/AppOrangeButton"
            android:tag="Library"
            android:text="LIBRARY APP"
            android:id="@+id/btn_app_library" />

        <Button
            style="@style/AppOrangeButton"
            android:tag="&quot;Build It Bigger&quot;"
            android:text="BUILD IT BIGGER"
            android:id="@+id/btn_app_bigger" />

        <Button
            style="@style/AppOrangeButton"
            android:tag="Reader"
            android:text="XYZ READER"
            android:id="@+id/btn_app_reader" />

        <Button
            style="@style/AppButton"
            android:tag="Capstone"
            android:text="CAPSTONE: MY OWN APP"
            android:id="@+id/btn_app_capstone"
            android:background="@color/background_capstone"
            android:textColor="#fff" />

    </LinearLayout>

</RelativeLayout>
